\defbeamertemplate*{headline}{Wismar}
{%
	\ifnum\thepage>1%
		\hbox{%
		\begin{beamercolorbox}[wd=0.8\paperwidth, ht=29pt, left]{toptext}
			\hspace{1.5cm}
			\usebeamerfont{toptext}\insertshorttitle,\ 
			\usebeamerfont{toptext}\insertshortauthor
		\end{beamercolorbox}
		\begin{beamercolorbox}[wd=0.2\paperwidth, ht=29pt, right]{pagenumber}
			\usebeamerfont{toptext}\insertframenumber/\inserttotalframenumber
			\hspace{0.6cm}
		\end{beamercolorbox}
		}
	\fi
}

\defbeamertemplate*{footline}{Wismar}
{%
	\begin{beamercolorbox}[wd=\paperwidth, ht=1.3em, dp=1.6em]{footer}
		\insertnavigation{\paperwidth}
	\end{beamercolorbox}
}

\defbeamertemplate*{frametitle}{Wismar}
{%
	\vspace{40pt}
	\begin{beamercolorbox}{frametitle}
		\usebeamerfont{frametitle}\insertframetitle
	\end{beamercolorbox}
