% Layout der Titelseite
\defbeamertemplate*{title page}{Wismar}[1][]
{%
	%~ \meta
	\vspace{1cm}
	\begin{beamercolorbox}[wd=9cm,dp=2ex,leftskip=10pt,ignorebg]{title page header}
		\usebeamerfont{title}\textbf{\inserttitle}
	\end{beamercolorbox}
	\vspace{1ex}
	\begin{beamercolorbox}[wd=8cm,dp=3ex,leftskip=10pt,ignorebg]{subtitle page header}
		\usebeamerfont{subtitle}\insertsubtitle
	\end{beamercolorbox}
	\vfill
	\begin{beamercolorbox}[wd=8cm,dp=3ex,leftskip=10pt,ignorebg]{date}
		\usebeamerfont{date}\insertdate
	\end{beamercolorbox}
	\vspace{15mm}
	\begin{textblock*}{6cm}(1.3cm,0.7\paperheight)
		\begin{beamercolorbox}{institute}
			\usebeamerfont{institute}\textbf{\ifx\insertinstitute\empty\fakname\else\fakname\newline\insertinstitute\fi}
		\end{beamercolorbox}
		\vspace{2pt}
		\begin{beamercolorbox}{author}
			\usebeamerfont{author}\insertauthor\par
			\usebeamerfont{hswurl}\href{https://www.hs-wismar.de}{www.hs-wismar.de}
		\end{beamercolorbox}
\end{textblock*}
}

